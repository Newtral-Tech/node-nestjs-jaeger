{
  "name": "@newtral/nestjs-jaeger",
  "version": "0.0.0",
  "description": "Jaeger middleware for NestJS applications",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "author": {
    "email": "lorens.leon@newtral.es",
    "name": "Lorens Leon"
  },
  "engines": {
    "node": ">=18"
  },
  "files": [
    "src",
    "esm",
    "lib"
  ],
  "dependencies": {
    "@types/express": "^4.17.21",
    "@types/jaeger-client": "^3.18.7",
    "@types/node": "*",
    "@types/quick-format-unescaped": "^4.0.3",
    "jaeger-client": "^3.19.0",
    "opentracing": "^0.14.7",
    "quick-format-unescaped": "^4.0.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/testing": "^10.3.0",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "axios": "^1.6.2",
    "chai": "^4.3.10",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.1.1",
    "standard-version": "^9.5.0",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.3.3"
  },
  "scripts": {
    "build": "concurrently 'npm:build:*'",
    "build:commonjs": "tsc",
    "build:esm": "tsc --module es2020 --outDir esm",
    "clean": "rm -rf lib esm reports tsconfig.tsbuildinfo",
    "test": "mocha --require tests/entry 'tests/**/*.{test,spec}.ts'",
    "cover": "nyc npm test",
    "lint": "eslint '{src,tests}/**/*.{js,ts}'",
    "lint:fix": "npm run lint -- --fix",
    "health": "npm install && npm run clean && npm run lint && npm run build:commonjs -- --noEmit && npm test -- --reporter dot",
    "ci": "npm ci && npm run lint && npm run build --noEmit && npm test",
    "prepublishOnly": "npm run clean && npm run build",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.3.0",
    "@nestjs/core": "^10.3.0",
    "@newtral/nestjs-logger": "^4.4.0",
    "express": "^4.17.2",
    "rxjs": "^7.4.0"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
