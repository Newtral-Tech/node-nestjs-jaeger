{
  "name": "@newtral/nestjs-jaeger",
  "version": "0.0.0",
  "description": "Jaeger middleware for NestJS applications",
  "main": "lib/index.js",
  "module": "esm/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "author": {
    "email": "lorens.leon@newtral.es",
    "name": "Lorens Leon"
  },
  "engines": {
    "node": ">=14",
    "npm": ">=7"
  },
  "files": [
    "src",
    "esm",
    "lib"
  ],
  "dependencies": {
    "@types/express": "^4.17.11",
    "@types/jaeger-client": "^3.18.0",
    "@types/node": "*",
    "@types/quick-format-unescaped": "^4.0.0",
    "jaeger-client": "^3.18.1",
    "opentracing": "^0.14.5",
    "quick-format-unescaped": "^4.0.3"
  },
  "devDependencies": {
    "@nestjs/platform-express": "^7.6.15",
    "@nestjs/testing": "^7.6.15",
    "@types/chai": "^4.2.17",
    "@types/faker": "^5.5.3",
    "@types/mocha": "^8.2.2",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "chai": "^4.3.4",
    "concurrently": "^6.0.2",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "faker": "^5.5.3",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "mocha": "^8.3.2",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "standard-version": "^9.3.0",
    "ts-mockito": "^2.6.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "~4.2.4"
  },
  "scripts": {
    "build": "concurrently 'npm:build:*'",
    "build:commonjs": "tsc",
    "build:esm": "tsc --module es2020 --outDir esm",
    "clean": "rm -rf lib esm reports tsconfig.tsbuildinfo",
    "test": "mocha --require tests/entry 'tests/**/*.{test,spec}.ts'",
    "cover": "nyc npm test",
    "lint": "eslint '{src,tests}/**/*.{js,ts}'",
    "lint:fix": "npm run lint -- --fix",
    "health": "npm install && npm run clean && npm run lint && npm run build:commonjs -- --noEmit && npm test -- --reporter dot",
    "ci": "npm ci && npm run lint && npm run build --noEmit && npm test",
    "prepublishOnly": "npm run clean && npm run build",
    "release": "standard-version"
  },
  "peerDependencies": {
    "@nestjs/common": "^7.6.15",
    "@nestjs/core": "^7.6.15",
    "@newtral/nestjs-logger": "^2.0.4",
    "express": "^4.17.1",
    "rxjs": "^6.6.7"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
